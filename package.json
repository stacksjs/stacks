{
  "name": "@ow3/stacks-monorepo",
  "version": "0.23.0",
  "private": true,
  "packageManager": "pnpm@7.7.0",
  "description": "The easy way to start your component and/or function library stack.",
  "author": "Chris Breuer",
  "license": "MIT",
  "homepage": "https://github.com/ow3org/stacks#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ow3org/stacks.git"
  },
  "bugs": {
    "url": "https://github.com/ow3org/stacks/issues"
  },
  "keywords": [
    "monorepo",
    "vite",
    "component",
    "library",
    "vue",
    "web components",
    "typescript",
    "javascript",
    "starter kit"
  ],
  "sideEffects": false,
  "contributors": [
    "Chris Breuer <chris@ow3.org>"
  ],
  "engines": {
    "node": ">=v16.16.0",
    "pnpm": ">=7.7.0"
  },
  "scripts": {
    "artisan": "pnpm --filter ./.stacks run artisan",
    "make:component": "pnpm --filter ./.stacks run make:component",
    "make:function": "pnpm --filter ./.stacks run make:function",
    "make:stack": "pnpm --filter ./.stacks run make:stack",
    "fresh": "pnpm --filter ./.stacks run fresh",
    "update": "pnpm --filter ./.stacks run update",
    "clean": "pnpm --filter ./.stacks run clean",
    "dev": "pnpm --filter ./.stacks dev",
    "dev:components": "pnpm --filter ./.stacks dev:components",
    "dev:functions": "pnpm --filter ./.stacks dev:functions",
    "dev:elements": "pnpm --filter ./.stacks dev:elements",
    "dev:docs": "pnpm --filter ./.stacks dev:docs",
    "dev:playground": "pnpm --filter ./.stacks dev:playground",
    "dev:pages": "pnpm --filter ./.stacks dev:pages",
    "dev:stacks": "pnpm --filter ./.stacks dev:stacks",
    "build": "pnpm --filter ./.stacks build",
    "build:components": "pnpm --filter ./.stacks build:components",
    "build:functions": "pnpm --filter ./.stacks build:functions",
    "build:elements": "pnpm --filter ./.stacks build:elements",
    "build:docs": "pnpm --filter ./.stacks build:docs",
    "build:playground": "pnpm --filter ./.stacks build:playground",
    "build:cli": "pnpm --filter ./.stacks build:cli",
    "build:stacks": "pnpm --filter ./.stacks build:stacks",
    "server:functions": "pnpm --filter ./.stacks server:functions",
    "server:pages": "pnpm --filter ./.stacks server:pages",
    "stubs": "pnpm --filter ./.stacks stubs",
    "commit": "pnpm --filter ./.stacks commit",
    "release": "pnpm --filter ./.stacks run release",
    "changelog": "pnpm --filter ./.stacks changelog",
    "deploy:functions": "pnpm --filter ./.stacks deploy:functions",
    "deploy:docs": "pnpm --filter ./.stacks deploy:docs",
    "deploy:playground": "pnpm --filter ./.stacks deploy:playground",
    "example": "pnpm --filter ./.stacks run example",
    "lint": "pnpm --filter ./.stacks run lint",
    "lint:fix": "pnpm --filter ./.stacks run lint:fix",
    "test": "pnpm --filter ./.stacks run test",
    "test:e2e": "pnpm --filter ./.stacks run test:e2e",
    "test:unit": "pnpm --filter ./.stacks run test:unit",
    "test:coverage": "pnpm --filter ./.stacks test:coverage",
    "test:types": "pnpm --filter ./.stacks run test:types",
    "types:fix": "pnpm --filter ./.stacks run types:fix",
    "preinstall": "pnpm --filter ./.stacks run preinstall",
    "postinstall": "pnpm --filter ./.stacks run postinstall"
  },
  "devDependencies": {
    "@ow3/stacks": "workspace:*"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "pnpm": { 
   "peerDependencyRules": { 
     "ignoreMissing": [ 
       "@algolia/client-search", 
       "react", 
       "react-dom", 
       "@types/react" 
     ] 
   } 
 } 
}
