{
  "name": "@ow3/monorepo",
  "version": "0.13.12",
  "private": true,
  "packageManager": "pnpm@7.1.9",
  "description": "The easy way to start your monorepo stack.",
  "author": "Chris Breuer",
  "license": "MIT",
  "homepage": "https://github.com/openwebstacks/stacks-starter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openwebstacks/stacks-starter.git"
  },
  "bugs": {
    "url": "https://github.com/openwebstacks/stacks-starter/issues"
  },
  "keywords": [
    "monorepo",
    "component",
    "library",
    "vue",
    "web components",
    "typescript",
    "javascript",
    "starter kit"
  ],
  "contributors": [
    "Chris Breuer <chris@ow3.org>"
  ],
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "engines": {
    "node": ">=v16.15.1",
    "pnpm": ">=7.1.9"
  },
  "scripts": {
    "build": "rimraf packages/*/dist packages/types && pnpm -r --filter './packages/**' run build",
    "build:vue": "rimraf packages/*/dist && pnpm -r --filter './packages/vue' run build",
    "build:types": "vue-tsc --emitDeclarationOnly",
    "dev": "pnpm run stub",
    "dev:vue": "pnpm run build && pnpm --filter './examples/vue' dev",
    "dev:wcs": "pnpm run build && pnpm --filter './examples/web-components' dev",
    "play": "pnpm --filter './playground' dev",
    "commit": "git-cz",
    "fresh": "rimraf packages/**/node_modules && rimraf examples/**/node_modules && rm -rf node_modules/ pnpm-lock.yaml && pnpm i -r",
    "preinstall": "esno ./.scripts/check-for-pnpm.ts && esno .scripts/check-node-version.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy": "pnpm run stub && pnpm --filter './playground' build",
    "release": "npx bumpp package.json packages/*/package.json --execute 'pnpm run changelog' --commit 'chore(release): %s' --tag --push --all",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "size": "esno ./.scripts/size.ts",
    "stub": "pnpm -r --parallel run stub",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:e2e": "cypress open",
    "test:unit": "vitest",
    "coverage": "vitest run --coverage",
    "types:fix": "esno ./.scripts/fix-types.ts",
    "typecheck": "vue-tsc --noEmit"
  },
  "dependencies": {
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.1",
    "@babel/types": "^7.18.4",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@commitlint/cz-commitlint": "^17.0.0",
    "@commitlint/types": "^17.0.0",
    "@iconify-json/heroicons-outline": "^1.1.1",
    "@iconify-json/heroicons-solid": "^1.1.1",
    "@types/node": "^17.0.31",
    "@unocss/preset-icons": "^0.38.1",
    "@unocss/transformer-compile-class": "^0.38.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.37",
    "@vueuse/core": "^8.6.0",
    "brotli-size": "^4.0.0",
    "bumpp": "^7.1.1",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.2.2",
    "cypress": "^10.0.3",
    "eslint": "^8.17.0",
    "eslint-plugin-cypress": "^2.12.1",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "gzip-size": "^7.0.0",
    "inquirer": "^8.2.4",
    "lint-staged": "^13.0.0",
    "minimist": "^1.2.6",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "terser": "^5.14.0",
    "typescript": "^4.7.3",
    "unocss": "^0.38.1",
    "unplugin-auto-import": "^0.8.7",
    "unplugin-vue-components": "^0.19.6",
    "upath": "^2.0.1",
    "vite": "^2.9.10",
    "vitest": "^0.14.1",
    "vue-tsc": "^0.37.3"
  },
  "pnpm": {
    "overrides": {
      "vite": "2.9.9"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --config ./commitlint.config.ts --edit $1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
