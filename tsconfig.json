{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "types": [
      "node",
      "vitest",
      "vite/client"
    ],
    "paths": {
      "@ow3/hello-world-stack": [
        "./components/index.ts"
      ],
      "@ow3/hello-world-vue": [
        "./components/index.ts"
      ],
      "@ow3/hello-world-elements": [
        ".stacks/elements"
      ],
      "@ow3/hello-world-functions": [
        "functions"
      ],
      "@ow3/stacks": [
        ".stacks/index.ts"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    ".stacks/**/*.js",
    ".stacks/**/*.ts",
    ".stacks/**/*.json",
    "apps/**/*.ts",
    "apps/**/*.vue",
    "apps/**/*.json",
    "components/**/*.json",
    "components/**/*.vue",
    "components/**/*.ts",
    "config/*.ts",
    "config/*.json",
    "functions/**/*.ts",
    "functions/**/*.json"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}
