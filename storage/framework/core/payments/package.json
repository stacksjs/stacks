  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "bun build.ts",
    "typecheck": "bun tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@stacksjs/config": "workspace:*",
    "better-dx": "^0.2.6",
    "@stacksjs/utils": "workspace:*",
    "@stripe/stripe-js": "^8.8.0",
    "stripe": "^20.4.0"
