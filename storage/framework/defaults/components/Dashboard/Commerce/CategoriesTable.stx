              <div class="flex items-center justify-end space-x-2">
                <button
                  type="button"
                  class="text-stone-400 transition-colors duration-150 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300"
                  data-action="view"
                  data-category-id="{{ category.id }}"
                >
                  <div class="i-hugeicons-view h-5 w-5"></div>
                </button>
                <button
                  type="button"
                  class="text-stone-400 transition-colors duration-150 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300"
