<script server>
  const categories = props.categories || []
  const searchQuery = props.searchQuery || ''
  const featuredFilter = props.featuredFilter || ''
  const sortBy = props.sortBy || 'name'
  const sortOrder = props.sortOrder || 'asc'
  const currentPage = props.currentPage || 1
  const itemsPerPage = props.itemsPerPage || 10

  // Color mapping for initial letters
  const initialColors = {
    'Burgers': 'bg-red-500',
    'Mexican': 'bg-green-500',
    'Desserts': 'bg-purple-500',
    'Asian Fusion': 'bg-blue-500'
  }

  function getInitialColor(name) {
    return initialColors[name] || 'bg-blue-500'
  }
</script>
<!-- Categories table -->
  <div class="overflow-hidden rounded-xl border border-stone-200/80 dark:border-neutral-700 shadow-sm">
    <table class="min-w-full divide-y divide-stone-100 dark:divide-neutral-700">
      <thead class="bg-stone-50/80 dark:bg-neutral-800">
        <tr>
          <th scope="col" class="py-3.5 pl-6 pr-3 text-left text-xs font-semibold uppercase tracking-wider text-stone-500 dark:text-neutral-400">
            <button class="group inline-flex items-center" data-action="sort" data-column="name">
              Category
              <span class="ml-2 flex-none rounded text-stone-400 group-hover:visible group-focus-visible">
                @if(sortBy == 'name')
                  <div class="{{ sortOrder == 'asc' ? 'i-hugeicons-arrow-up-02' : 'i-hugeicons-arrow-down-02' }} h-3.5 w-3.5"></div>
                @else
                  <div class="i-hugeicons-arrows-up-down h-3.5 w-3.5"></div>
                @endif
              </span>
            </button>
          </th>
          <th scope="col" class="px-3 py-3.5 text-left text-xs font-semibold uppercase tracking-wider text-stone-500 dark:text-neutral-400">Description</th>
