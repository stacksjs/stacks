<script server>
/**
 * Modern Navbar Component
 * A clean, refined navigation header for the dashboard.
 * Note: Window controls are handled natively by Craft on macOS.
 */

// Default user data
const defaultUser = {
  name: 'Chris Breuer',
  email: 'chris@stacksjs.org',
  avatar: 'https://avatars.githubusercontent.com/u/6228425',
}

function getProp(name, defaultValue) {
  return props[name] !== undefined ? props[name] : defaultValue
}

function getBreadcrumb(path) {
  const parts = (path || '/').split('/').filter(Boolean)
  return parts.map((part, index) => ({
    label: part.charAt(0).toUpperCase() + part.slice(1).replace(/-/g, ' '),
    path: '/' + parts.slice(0, index + 1).join('/'),
    isLast: index === parts.length - 1,
  }))
}

function isActiveRoute(path) {
  const currentPath = getProp('currentPath', '/')
  return currentPath === path || currentPath.startsWith(path + '/')
}

function getUser() {
  return getProp('user', defaultUser)
}

function getNotificationCount() {
  return getProp('notificationCount', 3)
}
</script>
<header class="sticky top-0 z-40 h-14 flex items-center gap-4 bg-white/80 dark:bg-neutral-900/80 backdrop-blur-xl border-b border-neutral-200/50 dark:border-neutral-700/50 px-4">
  <!-- Breadcrumb navigation -->
  <nav class="hidden lg:flex items-center gap-2 text-sm">
    <a href="/" class="text-neutral-400 hover:text-neutral-600 dark:hover:text-neutral-300 transition-colors">
