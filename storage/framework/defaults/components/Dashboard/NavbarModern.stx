        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
      </svg>
    </a>
    @foreach(getBreadcrumb(props.currentPath || '/') as crumb)
      <span class="text-neutral-300 dark:text-neutral-600">/</span>
      @if(!crumb.isLast)
        <a href="{{ crumb.path }}" class="text-neutral-500 hover:text-neutral-700 dark:text-neutral-400 dark:hover:text-neutral-200 transition-colors">
          {{ crumb.label }}
        </a>
      @else
        <span class="text-neutral-700 dark:text-neutral-200 font-medium">{{ crumb.label }}</span>
