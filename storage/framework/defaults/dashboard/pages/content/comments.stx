<script server>
/**
 * Comments Moderation Page
 * Uses synchronous SQLite queries (STX doesn't support async/await)
 */
const Database = require('bun:sqlite').Database
const path = require('path')

const dbPath = path.resolve(process.cwd(), 'database/stacks.sqlite')
let comments = []
let stats = { total: 0, pending: 0, approved: 0, spam: 0 }

try {
  const db = new Database(dbPath, { readonly: true })

  // Fetch all comments with post info
  const rawComments = db.query(`
    SELECT c.id, c.author_name, c.author_email, c.content, c.status, c.created_at, c.ip_address,
           p.title as post_title, p.id as post_id
    FROM comments c
    LEFT JOIN posts p ON c.commentable_id = p.id AND c.commentable_type = 'posts'
    ORDER BY c.created_at DESC
  `).all()

  comments = rawComments.map(function(c) {
    return {
      id: c.id,
      author: c.author_name || 'Anonymous',
      email: c.author_email || '',
      content: c.content || '',
      status: c.status || 'pending',
      date: c.created_at ? String(c.created_at).split('T')[0] : 'N/A',
      postTitle: c.post_title || 'Unknown Post',
      postId: c.post_id,
      ip: c.ip_address || ''
    }
  })

  // Calculate stats
  stats.total = comments.length
  stats.pending = comments.filter(function(c) { return c.status === 'pending' }).length
  stats.approved = comments.filter(function(c) { return c.status === 'approved' }).length
  stats.spam = comments.filter(function(c) { return c.status === 'spam' }).length

  db.close()
} catch (e) {
  comments = []
}
</script>

