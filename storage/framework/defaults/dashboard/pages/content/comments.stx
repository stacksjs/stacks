<script>
const API_BASE = 'http://localhost:3000/cms'
let deleteCommentId = null

const viewModal = document.getElementById('viewModal')
const deleteModal = document.getElementById('deleteModal')

function closeModals() {
  viewModal.style.display = 'none'
  deleteModal.style.display = 'none'
}

function showToast(message) {
  const toast = document.getElementById('toast')
  document.getElementById('toastMessage').textContent = message
  toast.style.transform = 'translateY(0)'
  toast.style.opacity = '1'
  setTimeout(() => {
    toast.style.transform = 'translateY(100%)'
    toast.style.opacity = '0'
  }, 3000)
}

function updateStatus(id, status) {
  fetch(`${API_BASE}/comments/${id}`, {
    method: 'PATCH',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ status })
  })
    .then(r => r.json())
    .then(() => {
      showToast(`Comment ${status}!`)
      setTimeout(() => location.reload(), 1000)
    })
    .catch(() => showToast('Failed to update comment'))
}

function deleteComment() {
  if (!deleteCommentId) return
  fetch(`${API_BASE}/comments/${deleteCommentId}`, { method: 'DELETE' })
    .then(r => r.json())
    .then(() => {
      showToast('Comment deleted!')
      closeModals()
      setTimeout(() => location.reload(), 1000)
    })
    .catch(() => showToast('Failed to delete comment'))
}

function filterComments(status) {
  document.querySelectorAll('.comment-row').forEach(row => {
    row.style.display = (status === 'all' || row.dataset.status === status) ? '' : 'none'
  })
  document.querySelectorAll('.filter-tab').forEach(tab => {
    const isActive = tab.dataset.filter === status
    tab.classList.toggle('text-white', isActive)
    tab.classList.toggle('bg-blue-600', isActive)
    tab.classList.toggle('text-gray-500', !isActive)
  })
}

// Event bindings
document.getElementById('closeViewModal').onclick = closeModals
document.getElementById('cancelDeleteBtn').onclick = closeModals
document.getElementById('confirmDeleteBtn').onclick = deleteComment

document.querySelectorAll('.filter-tab').forEach(tab => {
  tab.onclick = function() { filterComments(this.dataset.filter) }
})

document.querySelectorAll('.approve-btn').forEach(btn => {
  btn.onclick = function() { updateStatus(this.dataset.id, 'approved') }
})

document.querySelectorAll('.spam-btn').forEach(btn => {
  btn.onclick = function() { updateStatus(this.dataset.id, 'spam') }
})

document.querySelectorAll('.view-btn').forEach(btn => {
  btn.onclick = function() {
    document.getElementById('viewAuthor').textContent = this.dataset.author
    document.getElementById('viewEmail').textContent = this.dataset.email
    document.getElementById('viewContent').textContent = this.dataset.content
    document.getElementById('viewPost').textContent = this.dataset.post
    document.getElementById('viewDate').textContent = this.dataset.date
    document.getElementById('viewIp').textContent = this.dataset.ip || 'Not recorded'
    viewModal.style.display = 'flex'
  }
})

document.querySelectorAll('.delete-btn').forEach(btn => {
  btn.onclick = function() { deleteCommentId = this.dataset.id; deleteModal.style.display = 'flex' }
})

viewModal.onclick = e => { if (e.target === viewModal) closeModals() }
deleteModal.onclick = e => { if (e.target === deleteModal) closeModals() }
</script>
