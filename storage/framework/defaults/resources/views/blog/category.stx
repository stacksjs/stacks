<script server>
/**
 * Category Archive - Shows posts in a specific category
 */
const Database = require('bun:sqlite').Database
const path = require('path')

const dbPath = path.resolve(process.cwd(), 'database/stacks.sqlite')
let category = null
let posts = []
let allCategories = []

// Get category slug from URL path (e.g., /blog/category/tech)
const urlPath = typeof request !== 'undefined' ? request.url : ''
const pathParts = urlPath.split('/').filter(function(p) { return p && p !== 'blog' && p !== 'category' })
const categorySlug = pathParts[0] || ''

try {
  const db = new Database(dbPath, { readonly: true })

  // Find category by slug
  const allCats = db.query('SELECT * FROM categories').all()
  for (var i = 0; i < allCats.length; i++) {
    var c = allCats[i]
    var slug = c.slug || c.name.toLowerCase().replace(/\s+/g, '-')
    if (slug === categorySlug) {
      category = { id: c.id, name: c.name, slug: slug, description: c.description || '' }
      break
    }
  }

  if (category) {
    // Get posts in this category
    const rawPosts = db.query(`
      SELECT p.id, p.title, p.excerpt, p.poster, p.views, p.published_at, a.name as author_name
      FROM posts p
      LEFT JOIN authors a ON p.author_id = a.id
      JOIN categorizable_models cm ON p.id = cm.categorizable_id AND cm.categorizable_type = 'posts'
      WHERE cm.category_id = ? AND p.status = 'published'
      ORDER BY p.published_at DESC
    `).all(category.id)

    posts = rawPosts.map(function(p) {
      return {
        id: p.id,
        title: p.title,
        excerpt: p.excerpt || '',
        poster: p.poster,
        views: p.views || 0,
        publishedAt: p.published_at,
        authorName: p.author_name || 'Anonymous',
        slug: p.title.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, '')
      }
    })
  }

  // Get all categories for sidebar
  const rawCategories = db.query(`
    SELECT c.id, c.name, c.slug, COUNT(cm.categorizable_id) as post_count
    FROM categories c
    LEFT JOIN categorizable_models cm ON c.id = cm.category_id AND cm.categorizable_type = 'posts'
    GROUP BY c.id
    ORDER BY post_count DESC
  `).all()

  allCategories = rawCategories.map(function(c) {
    return {
      id: c.id,
      name: c.name,
      slug: c.slug || c.name.toLowerCase().replace(/\s+/g, '-'),
      postCount: c.post_count
    }
  })

  db.close()
} catch (e) {
  category = null
  posts = []
}

function formatDate(dateStr) {
  if (!dateStr) return ''
  var d = new Date(dateStr)
  var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
  return months[d.getMonth()] + ' ' + d.getDate() + ', ' + d.getFullYear()
}

var pageTitle = category ? category.name + ' - Category' : 'Category Not Found'
</script>

<layout name="blog" title="{{ pageTitle }}">
  <div class="container">
    @if (category)
      <!-- Category Header -->
      <header class="category-header">
        <div class="category-badge">Category</div>
        <h1 class="category-title">{{ category.name }}</h1>
        @if (category.description)
          <p class="category-description">{{ category.description }}</p>
        @endif
        <p class="post-count">{{ posts.length }} {{ posts.length === 1 ? 'post' : 'posts' }}</p>
      </header>

      <div class="blog-grid">
        <!-- Posts List -->
        <section class="posts-section">
          @if (posts.length > 0)
            <div class="posts-grid">
              @foreach (posts as post)
                <article class="post-card">
                  @if (post.poster)
                    <a href="/blog/{{ post.slug }}" class="post-image">
                      <img src="{{ post.poster }}" alt="{{ post.title }}" loading="lazy">
                    </a>
                  @endif
                  <div class="post-content">
                    <a href="/blog/{{ post.slug }}" class="post-title">{{ post.title }}</a>
                    <p class="post-excerpt">{{ post.excerpt }}</p>
                    <div class="post-meta">
                      <span>{{ post.authorName }}</span>
                      <span class="meta-dot">Â·</span>
                      <time>{{ formatDate(post.publishedAt) }}</time>
                    </div>
                  </div>
                </article>
              @endforeach
            </div>
          @else
            <div class="empty-state">
              <svg class="empty-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
              <h3>No posts in this category</h3>
              <p>Check back soon for new content.</p>
            </div>
          @endif
        </section>

        <!-- Sidebar -->
        <aside class="blog-sidebar">
          <div class="sidebar-widget">
            <h3 class="widget-title">All Categories</h3>
            <ul class="category-list">
              @foreach (allCategories as cat)
                <li class="{{ cat.slug === categorySlug ? 'active' : '' }}">
                  <a href="/blog/category/{{ cat.slug }}">
                    <span>{{ cat.name }}</span>
                    <span class="category-count">{{ cat.postCount }}</span>
                  </a>
                </li>
              @endforeach
            </ul>
          </div>

          <a href="/blog" class="back-to-blog">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Blog
          </a>
        </aside>
      </div>
    @else
      <!-- 404 State -->
      <div class="not-found">
        <h1>Category Not Found</h1>
        <p>The category you're looking for doesn't exist.</p>
        <a href="/blog" class="back-link">Back to Blog</a>
      </div>
    @endif
  </div>
</layout>

