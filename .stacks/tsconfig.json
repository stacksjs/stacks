{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "outDir": "./dist/types",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "vitest",
      "vite/client",
      "vue/ref-macros",
      "vite-plugin-pages/client",
      "vite-plugin-vue-component-preview/client",
      "vite-plugin-vue-layouts/client",
      "vite-plugin-pwa/client"
    ],
    "paths": {
      "~/*": ["../*"],
      "@stacksjs/actions": ["./core/actions/src/index.ts"],
      "@stacksjs/actions/*": ["./core/actions/src/*"],
      "@stacksjs/alias": ["./core/runtime/alias.ts"],
      "@stacksjs/arrays/*": ["./core/arrays/src/*"],
      "@stacksjs/arrays": ["./core/arrays/src/index.ts"],
      "@stacksjs/build": ["./core/build/src/index.ts"],
      "@stacksjs/build/*": ["./core/build/src/*"],
      "@stacksjs/cache": ["./core/cache/src/index.ts"],
      "@stacksjs/cache/*": ["./core/cache/src/*"],
      "@stacksjs/cli": ["./core/cli/src/index.ts"],
      "@stacksjs/cli/*": ["./core/cli/src/*"],
      "@stacksjs/cloud": ["./core/cloud/src/index.ts"],
      "@stacksjs/cloud/*": ["./core/cloud/src/*"],
      "@stacksjs/collections": ["./core/collections/src/index.ts"],
      "@stacksjs/collections/*": ["./core/collections/src/*"],
      "@stacksjs/config": ["./core/config/src/index.ts"],
      "@stacksjs/config/*": ["../config/*"],
      "@stacksjs/dashboard": ["./core/dashboard/src/index.ts"],
      "@stacksjs/dashboard/*": ["./core/dashboard/src/*"],
      "@stacksjs/error-handling": ["./core/error-handling/src/index.ts"],
      "@stacksjs/error-handling/*": ["./core/error-handling/src/*"],
      "@stacksjs/search-engine": ["./core/search-engine/src/index.ts"],
      "@stacksjs/search-engine/*": ["./core/search-engine/src/*"],
      "@stacksjs/storage": ["./core/storage/src/index.ts"],
      "@stacksjs/storage/*": ["./core/storage/src/*"],
      "@stacksjs/modules/*": ["./core/modules/src/*"],
      "@stacksjs/objects": ["./core/objects/src/index.ts"],
      "@stacksjs/objects/*": ["./core/objects/src/*"],
      "@stacksjs/path": ["./core/path/src/index.ts"],
      "@stacksjs/path/*": ["./core/path/src/*"],
      "@stacksjs/router": ["./core/router/src/index.ts"],
      "@stacksjs/router/*": ["./core/router/src/*"],
      "@stacksjs/security": ["./core/security/src/index.ts"],
      "@stacksjs/security/*": ["./core/security/src/*"],
      "@stacksjs/server": ["./core/server/src/index.ts"],
      "@stacksjs/server/*": ["./core/server/src/*"],
      "@stacksjs/strings": ["./core/strings/src/index.ts"],
      "@stacksjs/strings/*": ["./core/strings/src/*"],
      "@stacksjs/types": ["./core/types/src/index.ts"],
      "@stacksjs/types/*": ["./core/types/src/*"],
      "@stacksjs/ui": ["./core/ui/src/index.ts"],
      "@stacksjs/ui/*": ["./core/ui/src/*"],
      "@stacksjs/utils": ["./core/utils/src/index.ts"],
      "@stacksjs/utils/*": ["./core/utils/src/*"],
      "@stacksjs/x-ray": ["./core/x-ray/src/index.ts"],
      "@stacksjs/x-ray/*": ["./core/x-ray/src/*"],
      "stacks": ["./core/runtime/src/index.ts"],
      "stacks/*": ["./core/runtime/src/*"],
      "framework/*": ["./*"],
      "functions/*": ["../functions/*"],
      "config/*": ["../config/*"],
      "components/*": ["../components/*"],
      "pages/*": ["../pages/*"]
    }
  },
  "include": [
    "./**.d.ts",
    "./**/*",
    "../components/**/*",
    "../functions/**/*",
    "../pages/**/*"
  ],
  "exclude": [
    "./vitest.config.ts",
    "./examples/**",
    "../commitlint.config.cjs",
    "../**/README.md",
    "../**/dist/**",
    "../**/node_modules/**"
  ]
}
