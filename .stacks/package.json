{
  "name": "@ow3/stacks",
  "version": "0.22.1",
  "private": true,
  "packageManager": "pnpm@7.4.0",
  "description": "The core of the component library and Stacks framework.",
  "author": "Chris Breuer",
  "license": "MIT",
  "homepage": "https://github.com/openwebstacks/stacks-framework/tree/main/.stacks#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openwebstacks/stacks-framework.git",
    "directory": "./.stacks"
  },
  "bugs": {
    "url": "https://github.com/openwebstacks/stacks-framework/issues"
  },
  "keywords": [
    "framework",
    "bundler",
    "vite",
    "vite-plugin",
    "unbuild",
    "component",
    "library",
    "vue",
    "typescript",
    "javascript",
    "starter",
    "kit"
  ],
  "contributors": [
    "Chris Breuer <chris@ow3.org>"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "artisan": "bin/artisan.js"
  },
  "files": [
    "bin",
    "dist",
    "scripts"
  ],
  "engines": {
    "node": ">=v16.15.1",
    "pnpm": ">=7.4.0"
  },
  "scripts": {
    "make:component": "wip",
    "make:function": "wip",
    "make:stack": "wip",
    "dev": "pnpm run stubs",
    "dev:components": "unbuild ../components --stub",
    "dev:elements": "unbuild ../components --stub",
    "dev:functions": "unbuild ../functions --stub",
    "dev:stacks": "unbuild --stub",
    "dev:playground": "vite serve ../playground -c ./src/builds/playground.ts",
    "build": "pnpm run typecheck && wip",
    "build:components": "vite build -c ./src/builds/components.ts",
    "build:elements": "vite build -c ./src/builds/elements.ts",
    "build:functions": "unbuild ../functions",
    "build:stacks": "unbuild",
    "build:playground": "vite build -c ./src/builds/playground.ts",
    "stub": "unbuild --stub",
    "stubs": "pnpm -r --parallel run stub",
    "lint": "eslint . && pnpm -r --parallel lint",
    "lint:fix": "eslint . --fix && pnpm -r --parallel lint:fix",
    "commit": "cd .. && git cz",
    "release": "cd .. && npx bumpp .stacks/package.json apps/**/package.json components/package.json examples/**/package.json functions/package.json playground/package.json package.json --execute 'pnpm run changelog' --all",
    "changelog": "cd .. && conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "size": "esno .stacks/scripts/size.ts",
    "test": "cd .. && pnpm run test:unit && pnpm run test:e2e",
    "test:e2e": "cd .. && cypress open",
    "test:unit": "cd .. && vitest",
    "typecheck": "vue-tsc --noEmit",
    "types:fix": "esno scripts/fix-types.ts",
    "fresh": "pnpm run clean && pnpm i",
    "example": "esno scripts/run-example.ts",
    "coverage": "cd .. && vitest run --coverage",
    "clean": "cd .. && rimraf .stacks/dist .stacks/types/functions/* .stacks/types/components/* .stacks/node_modules apps/**/node_modules config/node_modules components/dist functions/dist components/node_modules playground/dist playground/node_modules examples/**/node_modules node_modules/ pnpm-lock.yaml",
    "preinstall": "esno scripts/check-for-pnpm.ts && esno scripts/check-node-version.ts",
    "postinstall": "npx simple-git-hooks ../config/git-hooks.ts"
  },
  "dependencies": {
    "@babel/types": "^7.18.6",
    "@iconify-json/heroicons-outline": "^1.1.2",
    "@iconify-json/heroicons-solid": "^1.1.2",
    "@ow3/eslint-config": "^0.27.4",
    "@types/node": "^17.0.31",
    "@unocss/preset-icons": "^0.41.1",
    "@unocss/transformer-compile-class": "^0.41.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.37",
    "@vueuse/core": "^8.7.5",
    "bumpp": "^8.2.1",
    "cac": "^6.7.12",
    "change-case": "^4.1.2",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.2.2",
    "cypress": "^10.3.0",
    "cz-git": "^1.3.8",
    "eslint": "^8.18.0",
    "eslint-plugin-cypress": "^2.12.1",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4",
    "unbuild": "^0.7.4",
    "unocss": "^0.41.1",
    "unplugin-auto-import": "^0.9.1",
    "unplugin-vue-components": "^0.20.1",
    "vite": "^2.9.13",
    "vite-plugin-inspect": "^0.5.0",
    "vitest": "^0.16.0",
    "vue": "^3.2.37",
    "vue-tsc": "^0.38.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@unocss/vite": "^0.41.1"
  },
  "build": {
    "entries": [
      "./index",
      "./src/cli"
    ],
    "clean": true,
    "declaration": true,
    "rollup": {
      "emitCJS": true,
      "inlineDependencies": true
    }
  }
}
