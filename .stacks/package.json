{
  "name": "@ow3/stacks",
  "version": "0.23.0",
  "private": true,
  "packageManager": "pnpm@7.7.0",
  "description": "The Stacks Framework.",
  "author": "Chris Breuer",
  "license": "MIT",
  "homepage": "https://github.com/ow3org/stacks/tree/main/.stacks#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ow3org/stacks.git",
    "directory": "./.stacks"
  },
  "bugs": {
    "url": "https://github.com/ow3org/stacks/issues"
  },
  "keywords": [
    "framework",
    "typescript",
    "javascript",
    "vite",
    "nitro",
    "vue",
    "functions",
    "components",
    "library",
    "starter",
    "kit"
  ],
  "contributors": [
    "Chris Breuer <chris@ow3.org>"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "artisan": "./dist/cli/artisan.mjs",
    "stacks": "./dist/cli/artisan.mjs",
    "stx": "./dist/cli/artisan.mjs"
  },
  "files": [
    "bin",
    "dist",
    "scripts"
  ],
  "engines": {
    "node": ">=v16.16.0",
    "pnpm": ">=7.7.0"
  },
  "scripts": {
    "artisan": "esno ./src/cli/run.ts",
    "nitro:build": "nitro build",
    "make:component": "wip",
    "make:function": "wip",
    "make:stack": "wip",
    "fresh": "pnpm run clean && pnpm i",
    "update": "pnpm --filter ./.stacks run update",
    "clean": "cd .. && rimraf .stacks/dist .stacks/types/functions/* .stacks/types/components/* .stacks/node_modules apps/**/node_modules apps/**/dist config/node_modules components/dist functions/dist components/node_modules node_modules/ pnpm-lock.yaml",
    "dev": "wip",
    "dev:components": "vite serve ./src/components -c ./src/builds/components.ts",
    "dev:elements": "wip",
    "dev:pages": "nitro dev",
    "dev:functions": "wip",
    "dev:stacks": "wip",
    "dev:playground": "vite serve ../apps/playground -c ./src/builds/playground.ts",
    "build": "pnpm run typecheck && pnpm run build:components && pnpm run build:elements && pnpm run build:functions && pnpm run build:cli && pnpm run build:stacks",
    "build:components": "vite build -c ./src/builds/components.ts",
    "build:elements": "vite build -c ./src/builds/elements.ts",
    "build:cli": "vite build -c ./src/builds/cli.ts",
    "build:functions": "vite build -c ./src/builds/functions.ts",
    "build:stacks": "vite -c ./src/builds/stacks.ts",
    "build:playground": "vite build -c ./src/builds/playground.ts",
    "server:functions": "wip",
    "server:pages": "nitro build",
    "stub": "unbuild ./src --stub",
    "stubs": "pnpm -r --parallel run stub",
    "lint": "eslint . && pnpm -r --parallel lint",
    "lint:fix": "eslint . --fix && pnpm -r --parallel lint:fix",
    "commit": "cd .. && git cz",
    "release": "cd .. && bumpp .stacks/package.json apps/**/package.json package.json --execute 'pnpm run changelog' --all",
    "changelog": "cd .. && conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "size": "esno .stacks/scripts/size.ts",
    "test": "cd .. && pnpm run test:unit && pnpm run test:e2e",
    "test:e2e": "cd .. && cypress open",
    "test:unit": "cd .. && vitest",
    "test:coverage": "cd .. && vitest run --coverage",
    "test:types": "vue-tsc --noEmit",
    "types:fix": "esno scripts/fix-types.ts",
    "example": "esno scripts/run-example.ts",
    "preinstall": "esno scripts/check-for-pnpm.ts && esno scripts/check-node-version.ts",
    "postinstall": "npx simple-git-hooks ../config/git-hooks.ts"
  },
  "dependencies": {
    "@babel/types": "^7.18.9",
    "@iconify-json/heroicons-outline": "^1.1.2",
    "@iconify-json/heroicons-solid": "^1.1.2",
    "@ow3/eslint-config": "^0.27.6",
    "@types/node": "^18.0.6",
    "@unocss/preset-icons": "^0.45.1",
    "@unocss/transformer-compile-class": "^0.45.1",
    "@vueuse/core": "^9.0.2",
    "bumpp": "^8.2.1",
    "cac": "^6.7.12",
    "change-case": "^4.1.2",
    "commitizen": "^4.2.5",
    "conventional-changelog-cli": "^2.2.2",
    "cypress": "^10.3.1",
    "cz-git": "^1.3.10",
    "eslint": "^8.20.0",
    "eslint-plugin-cypress": "^2.12.1",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "lint-staged": "^13.0.3",
    "nitropack": "^0.4.12",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4",
    "unocss": "^0.45.1",
    "unplugin-auto-import": "^0.10.2",
    "unplugin-vue-components": "^0.21.2",
    "vite": "^3.0.4",
    "vite-plugin-inspect": "^0.6.0",
    "vitest": "^0.19.1",
    "vue": "^3.2.37",
    "vue-tsc": "^0.39.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@vitejs/plugin-vue": "^3.0.1",
    "@unocss/vite": "^0.45.1",
    "events": "^3.3.0",
    "vitepress": "1.0.0-alpha.4"
  }
}
